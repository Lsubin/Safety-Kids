<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50sp"
    tools:context=".JoinParentActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:text="학부모 회원가입"
            android:textColor="#000"
            android:textSize="30sp" />
        >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="339dp"
        android:layout_height="457dp"
        android:gravity="center">

        <EditText
            android:id="@+id/makeEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="20dp"
            android:hint="이메일"
            android:inputType="textEmailAddress"
            android:singleLine="true" />

        <EditText
            android:id="@+id/makeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="20dp"
            android:layout_below="@id/makeEmail"
            android:hint="원생 이름"
            android:inputType="textEmailAddress"
            android:singleLine="true" />

        <EditText
            android:id="@+id/makePhoneNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="20dp"
            android:layout_below="@id/makeName"
            android:hint="핸드폰 번호"
            android:inputType="textEmailAddress"
            android:singleLine="true" />


        <EditText
            android:id="@+id/makePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/makePhoneNum"
            android:drawablePadding="20dp"
            android:hint="비밀번호"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/okPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/makePassword"
            android:drawablePadding="20dp"
            android:hint="비밀번호 확인"
            android:inputType="textPassword" />


        <Button
            android:id="@+id/btnJoin"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/okPassword"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="100sp"
            android:background="#ffffff"
            android:text="회원가입" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/btnJoin"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="100sp"
            android:layout_toRightOf="@id/btnJoin"
            android:background="#ffffff"
            android:text="취소" />
    </RelativeLayout>
</LinearLayout>